  },
  "resolutions": {
    "postcss": ">= 8.5.4",
    "braces": ">= 3.0.3"
  },
  "packageManager": "yarn@4.9.4",
  "scripts": {
    "prebuild": "rimraf ./dist && node --import ./ts-node.register.js ./src/scripts/generateSitemap.ts",
    "build": "yarn prebuild && NODE_ENV=production yarn webpack --config webpack/webpack.prod.js",
    "build:tests": "yarn prebuild && NODE_ENV=tests yarn webpack --config webpack/webpack.prod.js",
    "start:prod:server": "http-server dist -p 4040",
    "start:prod": "yarn build && yarn start:prod:server",
    "start:dev": "webpack serve --config webpack/webpack.dev.js",
    "tests:jest": "NODE_ENV=tests jest",
    "tests:jest:update": "yarn tests:jest -u",
    "tests:pw:build": "cross-env $(node ./scripts/set-uid-gid.js) COMPOSE_BAKE=true docker compose build --no-cache pg-tests-runner",
    "tests:pw:run": "cross-env $(node ./scripts/set-uid-gid.js) COMPOSE_BAKE=true docker compose run pg-tests-runner",
    "tests:pw": "yarn build:tests && yarn tests:pw:run",
    "tests:pw:update": "yarn build:tests && yarn tests:pw:run yarn playwright test -u",
    "tests": "yarn tests:jest && yarn tests:pw",
    "tests:update": "yarn tests:jest:update && yarn tests:pw:update",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:ts": "tsc --noEmit && eslint .",
    "lint:ts:fix": "yarn lint:ts --fix",
    "lint:css": "stylelint ./src/**/*.{scss,sass,css}",
    "lint:css:fix": "yarn lint:css --fix",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:fix": "yarn lint:ts:fix && yarn lint:css:fix",
    "upgrade:all": "yarn-upgrade-all"
  }
