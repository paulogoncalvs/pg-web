    "postcss": ">= 8.5.4",
    "braces": ">= 3.0.3"
  },
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "prebuild": "rimraf ./dist && node --import ./ts-node.register.js ./src/scripts/generateSitemap.ts",
    "build": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js",
    "build:tests": "pnpm run prebuild && cross-env NODE_ENV=tests webpack --config webpack/webpack.prod.js",
    "start:prod:server": "http-server dist -p 4040",
    "start:prod": "pnpm run build && pnpm run start:prod:server",
    "start:dev": "webpack serve --config webpack/webpack.dev.js",
    "tests:jest": "cross-env NODE_ENV=tests jest",
    "tests:jest:update": "pnpm run tests:jest -u",
    "tests:pw:build": "node ./scripts/run-with-uid-gid.js docker compose build --no-cache pg-tests-runner",
    "tests:pw:run": "node ./scripts/run-with-uid-gid.js docker compose run pg-tests-runner",
    "tests:pw": "pnpm run build:tests && pnpm run tests:pw:run",
    "tests:pw:update": "pnpm run build:tests && node ./scripts/run-with-uid-gid.js docker compose run pg-tests-runner pnpm exec playwright test --update-snapshots",
    "tests": "pnpm run tests:jest && pnpm run tests:pw",
    "tests:update": "pnpm run tests:jest:update && pnpm run tests:pw:update",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:ts": "tsc --noEmit && eslint .",
    "lint:ts:fix": "pnpm run lint:ts --fix",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:css:fix": "pnpm run lint:css --fix",
    "lint": "pnpm run lint:ts && pnpm run lint:css",
    "lint:fix": "pnpm run lint:ts:fix && pnpm run lint:css:fix"
  }
